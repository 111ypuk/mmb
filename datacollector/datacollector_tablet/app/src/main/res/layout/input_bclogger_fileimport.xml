<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/global_padding"
    android:paddingLeft="@dimen/global_padding"
    android:paddingRight="@dimen/global_padding"
    android:paddingTop="@dimen/global_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/global_padding"
            android:paddingRight="@dimen/global_padding"
            android:paddingTop="@dimen/global_padding" >

            <TextView
                android:id="@+id/inputBCLoggerFileImport_fileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/input_bclogger_fileimport_no_file_selected"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/inputBCLoggerFileImport_selectFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding"
                android:text="@string/input_bclogger_fileimport_select_file" />
        </LinearLayout>

        <Button
            android:id="@+id/inputBCLoggerFileImport_importFileButton"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_padding"
            android:text="@string/input_bclogger_fileimport_import_file" />

        <Button
            android:id="@+id/inputBCLoggerFileImport_clearConsoleButton"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_padding"
            android:text="@string/input_bclogger_fileimport_clear_console" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/inputBCLoggerFileImport_consoleScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/global_padding"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/inputBCLoggerFileImport_consoleTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="textMultiLine" />
    </ScrollView>
</LinearLayout>