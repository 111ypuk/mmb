<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/global_padding"
    android:paddingRight="@dimen/global_padding"
    android:paddingTop="@dimen/global_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/inputBcloggerStart_loggerLabel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/input_bclogger_start_no_logger"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/inputBcloggerStart_selectLoggerBtn"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/input_bclogger_start_select_logger" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="vertical">

        <Button
            android:id="@+id/inputBcloggerStart_settingsBtn"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/input_bclogger_start_settings" />

        <Button
            android:id="@+id/inputBcloggerStart_loadDataBtn"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/global_double_padding"
            android:text="@string/input_bclogger_start_load_data" />
    </LinearLayout>

</LinearLayout>