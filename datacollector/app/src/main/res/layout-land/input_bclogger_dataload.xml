<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/global_padding"
    android:paddingLeft="@dimen/global_padding"
    android:paddingRight="@dimen/global_padding"
    android:paddingTop="@dimen/global_padding" >

    <LinearLayout
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/inputBCLoggerDataload_getLogButton"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:text="@string/input_bclogger_dataload_get_log" />

        <Button
            android:id="@+id/inputBCLoggerDataload_getDebugButton"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_padding"
            android:text="@string/input_bclogger_dataload_get_debug" />

        <!--
        <Button
            android:id="@+id/inputBCLoggerDataload_clearDeviceButton"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_padding"
            android:text="@string/input_bclogger_dataload_clear_device" />
            -->
    </LinearLayout>

    <ScrollView
        android:id="@+id/inputBCLoggerDataload_consoleScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/global_padding"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/inputBCLoggerDataload_consoleTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="textMultiLine" />
    </ScrollView>
</LinearLayout>