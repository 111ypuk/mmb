<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/global_padding"
    android:paddingLeft="@dimen/global_padding"
    android:paddingRight="@dimen/global_padding"
    android:paddingTop="@dimen/global_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transp_export_last_export_date" />

        <TextView
            android:id="@+id/transpExport_lastExportTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/global_padding" >

        <Button
            android:id="@+id/transpExport_fullExportBtn"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:text="@string/transp_export_full" />

        <Button
            android:id="@+id/transpExport_incrementalExportBtn"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding"
            android:text="@string/transp_export_incremental" />
    </LinearLayout>

</LinearLayout>