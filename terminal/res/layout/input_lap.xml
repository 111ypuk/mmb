<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/global_padding"
    android:paddingRight="@dimen/global_padding"
    android:paddingTop="@dimen/global_padding" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_lap_distance" />

    <Spinner
        android:id="@+id/inputLap_distanceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_padding"
        android:prompt="@string/input_lap_prompt_distance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_padding"
        android:text="@string/input_lap_lap" />

    <Spinner
        android:id="@+id/inputLap_lapInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_padding"
        android:prompt="@string/input_lap_prompt_lap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_padding"
        android:text="@string/input_lap_input_mode" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_padding" >

        <RadioButton
            android:id="@+id/inputLap_startRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/global_input_mode_start" />

        <RadioButton
            android:id="@+id/inputLap_finishRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/global_input_mode_finish" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/global_padding" >

        <Button
            android:id="@+id/inputLap_okBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/input_lap_ok" />
    </LinearLayout>

</LinearLayout>